{
	"compilerOptions": {
		"module": "es2015",
		"target": "es5",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"outDir": "dst",
		"lib": [
			"es2018",
			"dom"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}